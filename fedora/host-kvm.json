{
  "builders": [
    {
      "boot_command" : [
        "<tab> ",
        "inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/{{user `vm_name`}}.cfg ",
        "inst.gpt ",
        "<enter>"
      ],
      "disk_size" : 30000,
      "headless" : false,
      "http_directory" : "http",
      "iso_checksum_type": "none",
      "iso_url": "http://fedora.mirrors.pair.com/linux/releases/26/Server/x86_64/iso/Fedora-Server-netinst-x86_64-26-1.5.iso",
      "shutdown_command" : "",
      "disk_interface": "virtio",
      "net_device": "virtio-net",
      "communicator": "none",
      "type": "qemu",
      "shutdown_timeout": "30m",
      "qemuargs": [
        [ "-m", "4096M" ],
        [ "-smp", "2" ]
      ],
      "accelerator": "kvm",
      "vm_name": "{{user `vm_name`}}",
      "format": "qcow2",
      "output_directory": "{{user `output_directory`}}"
    }
  ],
  "variables": {
    "username": "fedora",
    "uid": "1000",
    "password": "password",
    "output_directory": "output-qemu",
    "vm_name": "vm2",
    "domain": "lan"
  }
}
