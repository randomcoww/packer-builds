{
  "variables": {
    "user": "randomcoww",
    "uid": "10000",
    "password": "password",
    "hostname": "desktop01",
    "domain": "dyn.local",
    "timezone": "Etc/UTC",
    "output_directory": "/tmp/packer_build_qemu",
    "chef_environment": "testing",
    "encrypted_data_bag_secret_path": "/home/randomcoww/.chef/encrypted_data_bag_secret",
    "server_url": "https://api.opscode.com/organizations/madcoww",
    "validation_key_path": "/home/randomcoww/.chef/madcoww-validator.pem",
    "validation_client_name": "madcoww-validator"
  },
  "builders": [
    {
      "name": "{{user `hostname`}}",

      "type": "qemu",
      "format": "raw",
      "accelerator": "kvm",

      "iso_url": "http://cdimage.debian.org/cdimage/weekly-builds/amd64/iso-cd/debian-testing-amd64-netinst.iso",
      "iso_checksum": "c57bfa1c0eb95a3add30c47c477ab7b1b35a8f21acb04a217c33ee3613d79b23",
      "iso_checksum_type": "sha256",

      "http_directory": "http",
      "disk_size": 40000,
      "disk_interface": "scsi",

      "ssh_username": "root",
      "ssh_key_path": "files/packer.key",
      "ssh_wait_timeout": "7200s",
      "shutdown_command": "shutdown -P now",
      "output_directory": "{{user `output_directory`}}",

      "boot_wait": "2s",
      "qemuargs": [
        [ "-display", "none" ],
        [ "-m", "2048M" ],
        [ "-drive", "if=virtio,id=drive0,file={{user `output_directory`}}/packer-{{user `hostname`}},format=raw" ],
        [ "-drive", "if=pflash,format=raw,readonly,file=ovmf/OVMF_CODE-pure-efi.fd" ],
        [ "-drive", "if=pflash,format=raw,file=ovmf/OVMF_VARS-pure-efi.fd" ]
      ],
      "boot_command": [
        "<wait><wait><wait><wait><wait>e<wait>",
        "<del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del>",

        "linux /install.amd/vmlinuz ",
        "auto=true ",
        "priority=critical ",
        "url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed-debian_de.cfg ",
        "debian-installer=en_US locale=en_US keymap=us ",
        "time/zone={{user `timezone`}} ",
        "netcfg/get_hostname={{user `hostname`}} ",
        "netcfg/get_domain={{user `domain`}} ",
        "fb=false debconf/frontend=noninteractive ",
        "passwd/username={{user `user`}} ",
        "passwd/user-fullname={{user `user`}} ",
        "passwd/user-uid={{user `uid`}} ",
        "passwd/user-password-again={{user `password`}} ",
        "passwd/user-password={{user `password`}} ",
        "<enter>",

        "initrd /install.amd/initrd.gz",
        "<wait><f10><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "echo 'vm.swappiness = 0' >> /etc/sysctl.conf",
        "echo 'GRUB_TERMINAL=\"gfxterm serial\"' >> /etc/default/grub",
        "echo 'GRUB_SERIAL_COMMAND=\"serial --unit=0 --speed=115200 --word=8 --parity=no --stop=1\"' >> /etc/default/grub",
        "update-grub",
        "apt-get -y install curl wget git cgroup-bin nfs-client avahi-autoipd bridge-utils ntp build-essential openvpn resolvconf autofs",
        "apt-get -y install mpv youtube-dl libav-tools xtightvncviewer htop feh ncmpcpp screen tmux cups",
        "apt-get -y install fonts-takao fonts-takao-gothic fonts-takao-mincho",
        "mkdir /etc/chef",
        "echo '/auto /etc/auto.misc --timeout=600 --ghost' >> /etc/auto.master",
        "echo 'pub -fstype=nfs,rw,hard,noatime,nodiratime fs:/pub' >> /etc/auto.misc",
        "echo 'img -fstype=nfs,rw,hard,noatime,nodiratime fs:/img' >> /etc/auto.misc",
        "echo 'music -fstype=nfs,rw,hard,noatime,nodiratime fs:/music' >> /etc/auto.misc",
        "echo 'video -fstype=nfs,rw,hard,noatime,nodiratime fs:/video' >> /etc/auto.misc",
        "echo 'torrent -fstype=nfs,rw,hard,noatime,nodiratime fs:/torrent' >> /etc/auto.misc"
      ]
    },
    {
      "type": "chef-solo",
      "cookbook_paths": ["cookbooks"],
      "json": {
        "network_interfaces": {
          "ens2": {
            "bootproto": "manual",
            "reload": false
          },
          "ens3": {
            "bootproto": "manual",
            "reload": false
          },
          "br0": {
            "bootproto": "dhcp",
            "bridge_ports": [ "ens2" ],
            "reload": false
          },
          "br1": {
            "bootproto": "ipv4ll",
            "bridge_ports": [ "ens3" ],
            "post_up": "ip addr show $IFACE | grep -q \"inet 169.254\"; while [ $? -ne 0 ]; do sleep 1; ip addr show $IFACE | grep -q \"inet 169.254\"; done",
            "reload": false
          }
        }
      },
      "run_list": [
        "recipe[docker_wrapper::service]",
        "recipe[network_interfaces_wrapper::module_hack]",
        "recipe[network_interfaces_wrapper::debian]"
      ],
      "staging_directory": "/etc/chef"
    },
    {
      "type": "file",
      "source": "{{user `encrypted_data_bag_secret_path` }}",
      "destination": "/etc/chef/encrypted_data_bag_secret"
    },
    {
      "type": "chef-client",
      "skip_install": true,
      "server_url": "{{user `server_url`}}",
      "chef_environment": "{{user `chef_environment`}}",
      "prevent_sudo": true,
      "node_name": "{{user `hostname`}}",
      "skip_clean_node": true,
      "skip_clean_client": true,
      "config_template": "files/config_template",
      "validation_client_name": "{{user `validation_client_name`}}",
      "validation_key_path": "{{user `validation_key_path`}}",
      "json": {
        "chef_client": {
          "daemon_options": ["-E", "{{user `chef_environment`}}"],
          "config": {
            "node_name": "{{user `hostname`}}"
          }
        }
      },
      "run_list": [
        "recipe[chef-client::systemd_service]",
        "recipe[chef-client::config]",
        "recipe[vpn_config::default]"
      ]
    },
    {
      "type": "shell",
      "inline": ["rm /root/.ssh/authorized_keys"]
    }
  ]
}
