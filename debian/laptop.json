{
  "builders": [
    {
      "boot_command" : [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "auto <wait>",

        "debian-installer=en_US <wait>",
        "locale=en_US <wait>",
        "kbd-chooser/method=us <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "netcfg/get_hostname={{user `vm_name`}} <wait>",
        "netcfg/get_domain={{user `domain`}} <wait>",

        "passwd/user-fullname={{user `username`}} <wait>",
        "passwd/username={{user `username`}} <wait>",
        "passwd/user-uid={{user `uid`}} <wait>",
        "passwd/user-password={{user `password`}} <wait>",
        "passwd/user-password-again={{user `password`}} <wait>",
        "-- <wait>",
        "<enter><wait>"
      ],
      "disk_size" : 20000,
      "headless" : false,
      "http_directory" : "http",
      "iso_checksum_url": "https://cdimage.debian.org/cdimage/weekly-builds/amd64/iso-cd/SHA512SUMS",
      "iso_checksum_type": "sha512",
      "iso_url": "https://cdimage.debian.org/cdimage/weekly-builds/amd64/iso-cd/debian-testing-amd64-netinst.iso",
      "shutdown_command" : "echo '{{user `password`}}'| sudo --stdin /sbin/halt -p",
      "disk_interface": "{{user `disk_interface`}}",
      "net_device": "virtio-net",
      "communicator": "ssh",
      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `password`}}",
      "ssh_wait_timeout": "10000s",
      "type": "qemu",
      "qemuargs": [
        [ "-m", "1024M" ],
        [ "-smp", "2" ]
      ],
      "accelerator": "kvm",
      "vm_name": "{{user `vm_name`}}",
      "format": "{{user `format`}}",
      "output_directory": "{{user `output_directory`}}"
    }
  ],
  "provisioners": [
    {
      "pause_before" : "5s",
      "environment_vars": [
        "KUBERNETES_VERSION=1.7.4"
      ],
      "type": "shell",
      "execute_command": "echo '{{user `password`}}'| {{.Vars}} sudo --preserve-env --stdin sh '{{.Path}}'",
      "scripts": [
        "scripts/ssh_sshd_config.sh",
        "scripts/sysctl.sh",

        "scripts/install_chef.sh",
        "scripts/install_qemu.sh",

        "scripts/install_docker.sh",
        "scripts/install_kubelet.sh",

        "scripts/install_cloud-init.sh",
        "scripts/cloud-init-local-module.sh",

        "scripts/install_laptop_components.sh",
        "scripts/finish.sh"
      ]
    }
  ],
  "variables": {
    "username": "debian",
    "uid": "1000",
    "password": "password",
    "output_directory": "output-qemu",
    "vm_name": "debian-cloud-image",
    "domain": "lan"
  }
}
