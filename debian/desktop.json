{
  "builders": [
    {
      "boot_command" : [
         "<down><down><enter>",
         "<down><down><down><down><down><enter>",
         "<wait45s>",
         "http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<enter><wait10s>",
         "{{user `username`}}<enter><wait5s>",
         "<enter><wait5s>",
         "{{user `password`}}<enter><wait5s>",
         "{{user `password`}}<enter><wait>"
      ],
      "disk_size" : 120000,
      "headless" : false,
      "http_directory" : "http",
      "iso_checksum_url": "https://cdimage.debian.org/cdimage/weekly-builds/amd64/iso-cd/SHA512SUMS",
      "iso_checksum_type": "sha512",
      "iso_url": "https://cdimage.debian.org/cdimage/weekly-builds/amd64/iso-cd/debian-testing-amd64-netinst.iso",
      "shutdown_command" : "echo '{{user `password`}}'| sudo --stdin /sbin/halt -p",
      "disk_interface": "{{user `disk_interface`}}",
      "net_device": "virtio-net",
      "communicator": "ssh",
      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `password`}}",
      "ssh_wait_timeout": "10000s",
      "type": "qemu",
      "qemuargs": [
        [ "-m", "4096M" ],
        [ "-smp", "2" ],
        [ "-drive", "if=pflash,format=raw,readonly=on,file={{user `ovmf_code`}},unit=0" ],
        [ "-drive", "if=pflash,format=raw,file={{user `ovmf_vars`}},unit=1" ],
        [ "-drive", "file={{user `output_directory`}}/{{user `vm_name`}},if={{user `disk_interface`}},cache=writeback,discard=ignore,format={{user `format`}}" ]
      ],
      "accelerator": "kvm",
      "vm_name": "{{user `vm_name`}}",
      "format": "{{user `format`}}",
      "output_directory": "{{user `output_directory`}}"
    }
  ],
  "provisioners": [
    {
      "pause_before" : "5s",
      "environment_vars": [
        "KUBELET_URL=https://storage.googleapis.com/kubernetes-release/release/v1.7.4/bin/linux/amd64/kubelet",
        "KUBE_PROXY_URL=https://storage.googleapis.com/kubernetes-release/release/v1.7.4/bin/linux/amd64/kube-proxy",
        "PACKER_URL=https://releases.hashicorp.com/packer/1.0.4/packer_1.0.4_linux_amd64.zip",
        "CHEFDK_URL=https://packages.chef.io/files/stable/chefdk/2.1.11/debian/8/chefdk_2.1.11-1_amd64.deb",
      ],
      "type": "shell",
      "execute_command": "echo '{{user `password`}}'| {{.Vars}} sudo --preserve-env --stdin sh '{{.Path}}'",
      "scripts": [
        "scripts/ssh_sshd_config.sh",
        "scripts/sysctl.sh",

        "scripts/install_chef.sh",
        "scripts/install_qemu.sh",

        "scripts/install_docker.sh",
        "scripts/install_kubelet.sh",

        "scripts/install_cloud-init.sh",
        "scripts/cloud-init-local-module.sh",

        "scripts/install_desktop_components.sh",
        "scripts/finish.sh"
      ]
    }
  ],
  "variables": {
    "format": "qcow2",
    "username": "debian",
    "password": "password",
    "output_directory": "output-qemu",
    "disk_interface": "virtio",
    "vm_name": "debian-desktop-image",
    "ovmf_code": "../ovmf/OVMF_CODE.fd",
    "ovmf_vars": "../ovmf/OVMF_VARS.fd"
  }
}
