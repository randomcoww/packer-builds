{
  "variables": {
    "user": "randomcoww",
    "uid": "10000",
    "password": "password",
    "hostname": "desktop01",
    "domain": "dyn.local",
    "timezone": "Etc/UTC",
    "output_directory": "/tmp/packer_build_qemu",
    "chef_environment": "testing",
    "encrypted_data_bag_secret_path": "/home/randomcoww/.chef/encrypted_data_bag_secret",
    "server_url": "https://api.opscode.com/organizations/madcoww",
    "validation_key_path": "/home/randomcoww/.chef/madcoww-validator.pem",
    "validation_client_name": "madcoww-validator"
  },
  "builders": [
    {
      "name": "{{user `hostname`}}",

      "type": "qemu",
      "format": "raw",
      "accelerator": "kvm",

      "iso_url": "http://cdimage.debian.org/cdimage/weekly-builds/amd64/iso-cd/debian-testing-amd64-netinst.iso",
      "iso_checksum_url": "http://cdimage.debian.org/cdimage/weekly-builds/amd64/iso-cd/SHA256SUMS",
      "iso_checksum_type": "sha256",

      "http_directory": "http",
      "disk_size": 40000,
      "disk_interface": "scsi",

      "ssh_username": "{{user `user`}}",
      "ssh_password": "{{user `password`}}",
      "ssh_wait_timeout": "7200s",
      "shutdown_command": "shutdown -P now",
      "output_directory": "{{user `output_directory`}}",
      "shutdown_command": "sudo bash -c 'rm /etc/sudoers.d/00_provisioning_temp && shutdown -P now'",

      "boot_wait": "2s",
      "qemuargs": [
        [ "-display", "none" ],
        [ "-m", "2048M" ],
        [ "-drive", "if=virtio,id=drive0,file={{user `output_directory`}}/packer-{{user `hostname`}},format=raw" ],
        [ "-drive", "if=pflash,format=raw,readonly,file=ovmf/OVMF_CODE-pure-efi.fd" ],
        [ "-drive", "if=pflash,format=raw,file=ovmf/OVMF_VARS-pure-efi.fd" ]
      ],
      "boot_command": [
        "<wait><wait><wait><wait><wait>e<wait>",
        "<del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del><del>",

        "linux /install.amd/vmlinuz ",
        "auto=true ",
        "priority=critical ",
        "url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed-debian_de.cfg ",
        "debian-installer=en_US locale=en_US keymap=us ",
        "time/zone={{user `timezone`}} ",
        "netcfg/get_hostname={{user `hostname`}} ",
        "netcfg/get_domain={{user `domain`}} ",
        "fb=false debconf/frontend=noninteractive ",
        "passwd/username={{user `user`}} ",
        "passwd/user-fullname={{user `user`}} ",
        "passwd/user-uid={{user `uid`}} ",
        "passwd/user-password-again={{user `password`}} ",
        "passwd/user-password={{user `password`}} ",
        "<enter>",

        "initrd /install.amd/initrd.gz",
        "<wait><f10><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "echo 'vm.swappiness = 0' | sudo tee -a /etc/sysctl.conf",
        "echo 'GRUB_TERMINAL=\"gfxterm serial\"' | sudo tee -a /etc/default/grub",
        "echo 'GRUB_SERIAL_COMMAND=\"serial --unit=0 --speed=115200 --word=8 --parity=no --stop=1\"' | sudo tee -a /etc/default/grub",
        "sudo update-grub",

        "sudo apt-get -y install curl wget git cgroup-bin nfs-client avahi-autoipd bridge-utils ntp build-essential openvpn resolvconf autofs",
        "sudo apt-get -y install mpv youtube-dl libav-tools xtightvncviewer htop feh ncmpcpp screen tmux cups",
        "sudo apt-get -y install fonts-takao fonts-takao-gothic fonts-takao-mincho",

        "echo '/auto /etc/auto.misc --timeout=600 --ghost' | sudo tee -a /etc/auto.master",
        "echo 'pub -fstype=nfs,rw,hard,noatime,nodiratime fs:/pub' | sudo tee -a /etc/auto.misc",
        "echo 'img -fstype=nfs,rw,hard,noatime,nodiratime fs:/img' | sudo tee -a /etc/auto.misc",
        "echo 'music -fstype=nfs,rw,hard,noatime,nodiratime fs:/music' | sudo tee -a /etc/auto.misc",
        "echo 'video -fstype=nfs,rw,hard,noatime,nodiratime fs:/video' | sudo tee -a /etc/auto.misc",
        "echo 'torrent -fstype=nfs,rw,hard,noatime,nodiratime fs:/torrent' | sudo tee -a /etc/auto.misc",

        "echo 'resample-method = soxr-vhq' | sudo tee -a /etc/pulse/daemon.conf",
        "echo 'default-sample-format = s24le' | sudo tee -a /etc/pulse/daemon.conf",
        "echo 'default-sample-rate = 192000' | sudo tee -a /etc/pulse/daemon.conf",
        "echo 'alternate-sample-rate = 176200' | sudo tee -a /etc/pulse/daemon.conf"
      ]
    },
    {
      "type": "chef-solo",
      "cookbook_paths": ["cookbooks"],
      "json": {
        "network_interfaces": {
          "ens2": {
            "bootproto": "manual",
            "reload": false
          },
          "ens3": {
            "bootproto": "manual",
            "reload": false
          },
          "br0": {
            "bootproto": "dhcp",
            "bridge_ports": [ "ens2" ],
            "reload": false
          },
          "br1": {
            "bootproto": "ipv4ll",
            "bridge_ports": [ "ens3" ],
            "reload": false
          }
        }
      },
      "run_list": [
        "recipe[network_interfaces_wrapper::module_hack]",
        "recipe[network_interfaces_wrapper::debian]"
      ]
    },
    {
      "type": "chef-client",
      "skip_install": true,
      "server_url": "{{user `server_url`}}",
      "chef_environment": "{{user `chef_environment`}}",
      "encrypted_data_bag_secret_path": "{{user `encrypted_data_bag_secret_path`}}",
      "validation_client_name": "{{user `validation_client_name`}}",
      "validation_key_path": "{{user `validation_key_path`}}",
      "staging_directory": "/etc/chef",
      "run_list": [
        "recipe[docker_wrapper::service]",
        "recipe[vpn_config::default]"
      ]
    }
  ]
}
