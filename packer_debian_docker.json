{
  "variables": {
    "instance": "ns",
    "user": "randomcoww",
    "uid": "10000",
    "password": "password",
    "hostname": "docker",
    "domain": "lan",
    "timezone": "Etc/UTC"
  },
  "builders": [
    {
      "type": "qemu",
      "iso_url": "http://cdimage.debian.org/cdimage/weekly-builds/amd64/iso-cd/debian-testing-amd64-netinst.iso",
      "iso_checksum_url": "http://cdimage.debian.org/cdimage/weekly-builds/amd64/iso-cd/SHA256SUMS",
      "iso_checksum_type": "sha256",
      "shutdown_command": "sudo bash -c 'rm /etc/sudoers.d/00_provisioning_temp && shutdown -P now'",

      "format": "raw",
      "accelerator": "kvm",
      "http_directory": "http",
      "disk_size": 20000,
      "disk_interface": "virtio",
      "net_device": "virtio-net",

      "headless": true,
      "vm_name": "{{user `hostname`}}-{{user `instance`}}",

      "ssh_username": "{{user `user`}}",
      "ssh_password": "{{user `password`}}",
      "ssh_wait_timeout": "3600s",
      "boot_command": [
        "<esc><wait><wait>",
        "install auto ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed-debian.cfg ",
        "debian-installer=en_US locale=en_US keymap=us ",

        "time/zone={{user `timezone`}} ",
        "netcfg/get_hostname={{user `hostname`}}-{{user `instance`}} ",
        "netcfg/get_domain={{user `domain`}} ",

        "fb=false debconf/frontend=noninteractive ",

        "passwd/username={{user `user`}} ",
        "passwd/user-fullname={{user `user`}} ",
        "passwd/user-uid={{user `uid`}} ",
        "passwd/user-password={{user `password`}} ",
        "passwd/user-password-again={{user `password`}} ",

        "initrd=/install/initrd.gz -- console=ttyS0,115200n8 elevator=noop <enter>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "config/common/ssh",
      "destination": "/tmp/ssh"
    },
    {
      "type": "file",
      "source": "config/common/modprobe.d",
      "destination": "/tmp/modprobe.d"
    },
    {
      "type": "file",
      "source": "config/{{user `hostname`}}-{{user `instance`}}/network",
      "destination": "/tmp/network"
    },
    {
      "type": "file",
      "source": "config/{{user `hostname`}}-{{user `instance`}}/system",
      "destination": "/tmp/system"
    },
    {
      "type": "shell",
      "inline": [
        "echo nameserver 8.8.8.8 | sudo tee -a /etc/resolv.conf",
        "echo 'vm.swappiness = 0' | sudo tee -a /etc/sysctl.conf",
        "echo 'net.ipv4.ip_forward = 1' | sudo tee -a /etc/sysctl.conf",
        "echo 'net.ipv6.ip_forward = 1' | sudo tee -a /etc/sysctl.conf",
        "sudo update-grub",
        "sudo apt-get -y install apt-transport-https ca-certificates gnupg2",
        "sudo apt-key adv --keyserver hkp://p80.pool.sks-keyservers.net:80 --recv-keys 58118E89F3A912897C070ADBF76221572C52609D",
        "echo deb https://apt.dockerproject.org/repo debian-stretch main | sudo tee -a /etc/apt/sources.list.d/docker.list",
        "sudo apt-get -y update",
        "sudo sudo apt-get -y install docker-engine ntp nfs-common",

        "sudo mv /tmp/ssh/sshd_config /etc/ssh/sshd_config",
        "mkdir -p ~/.ssh",
        "mv /tmp/ssh/authorized_keys ~/.ssh/authorized_keys",

        "sudo mv /tmp/modprobe.d/* /etc/modprobe.d/",

        "sudo mv /tmp/system/* /etc/systemd/system/",
        "sudo systemctl enable $(find /etc/systemd/system -maxdepth 1 -type f)",

        "sudo mv /tmp/network/* /etc/systemd/network/",
        "sudo systemctl enable systemd-resolved",
        "sudo systemctl enable systemd-networkd",
        "sudo ln -sf /run/systemd/resolve/resolv.conf /etc/resolv.conf",
        "sudo systemctl disable networking"
      ]
    }
  ]
}
