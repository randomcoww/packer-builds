<domain type='kvm'>
  <name><%= @name %></name>
  <memory unit='GiB'><%= @memory %></memory>
  <currentMemory unit='GiB'><%= @memory %></currentMemory>
  <vcpu placement='static'><%= @vcpu %></vcpu>
  <iothreads>1</iothreads>
  <iothreadids>
    <iothread id='1'/>
  </iothreadids>
  <os>
    <type arch='x86_64' machine='pc'>hvm</type>
  </os>
  <features>
    <acpi/>
    <apic/>
    <pae/>
  </features>
  <cpu mode='host-passthrough'>
    <topology sockets='1' cores='<%= @vcpu %>' threads='1'/>
  </cpu>
  <clock offset='utc'/>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>restart</on_crash>
  <devices>
    <emulator>/usr/bin/qemu-system-x86_64</emulator>
    <disk type='file' device='disk'>
      <driver name='qemu' type='raw' iothread='1'/>
      <source file='<%= @disk_source %>'/>
      <target dev='vda' bus='virtio'/>
    </disk>
    <controller type='usb' model='none'/>
    <filesystem type='mount' accessmode='squash'>
      <source dir='/img/secret/chef'/>
      <target dir='chef-secret'/>
      <readonly/>
    </filesystem>
    <% @interfaces.each do |i, e| %>
    <interface type='<%= i %>'>
      <source bridge='<%= e['source'] %>'/>
      <% if e['mac_address'] %><mac address='<%= e['mac_address'] %>'/><% end %>
      <model type='virtio-net'/>
    </interface>
    <% end %>
    <serial type='pty'/>
    <console type='pty'/>
    <memballoon model='virtio'/>
  </devices>
</domain>
