{
  "variables": {
    "debian_version": "8.6.0",
    "zol_version": "8",
    "instance": "1",
    "user": "randomcoww",
    "uid": "10000",
    "password": "password",
    "hostname": "zfs",
    "domain": "local",
    "output_directory": "/img/build/packer_build_qemu"
  },
  "builders": [
    {
      "name": "{{user `hostname`}}-{{user `instance`}}",

      "type": "qemu",
      "format": "raw",
      "accelerator": "kvm",

      "iso_url": "http://cdimage.debian.org/debian-cd/{{user `debian_version`}}/amd64/iso-cd/debian-{{user `debian_version`}}-amd64-netinst.iso",
      "iso_checksum_url": "http://cdimage.debian.org/debian-cd/{{user `debian_version`}}/amd64/iso-cd/SHA256SUMS",
      "iso_checksum_type": "sha256",

      "http_directory": "http",
      "disk_size": 20000,
      "disk_interface": "virtio-scsi",

      "ssh_username": "{{user `user`}}",
      "ssh_password": "{{user `password`}}",
      "ssh_wait_timeout": "3600s",
      "shutdown_command": "sudo bash -c 'rm /etc/sudoers.d/00_provisioning_temp && shutdown -P now'",
      "output_directory": "{{user `output_directory`}}",

      "boot_wait": "2s",
      "qemuargs": [
        [ "-cpu", "host" ],
        [ "-display", "none" ],
        [ "-m", "1024M" ]
      ],
      "boot_command": [
        "<esc><wait><wait>",
        "install auto ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed-debian.cfg ",
        "debian-installer=en_US locale=en_US keymap=us ",

        "time/zone=Etc/UTC ",
        "netcfg/get_hostname={{user `hostname`}}-{{user `instance`}} ",
        "netcfg/get_domain={{user `domain`}} ",

        "fb=false debconf/frontend=noninteractive ",

        "passwd/username={{user `user`}} ",
        "passwd/user-fullname={{user `user`}} ",
        "passwd/user-uid={{user `uid`}} ",
        "passwd/user-password-again={{user `password`}} ",
        "passwd/user-password={{user `password`}} ",

        "initrd=/install/initrd.gz -- console=ttyS0,115200n8 <enter>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "files/config/zfs/{{user `instance`}}/10-eth0.network",
      "destination": "/tmp/10-eth0.network"
    },
    {
      "type": "file",
      "source": "files/config/zfs/{{user `instance`}}/10-eth1.network",
      "destination": "/tmp/10-eth1.network"
    },
    {
      "type": "file",
      "source": "files/config/zfs/nfs-exports",
      "destination": "/tmp/nfs-exports"
    },

    {
      "type": "shell",
      "inline": [
        "echo 'vm.swappiness = 0' | sudo tee -a /etc/sysctl.conf",
        "sudo update-grub",
        "sudo apt-get -y install curl wget cgroup-bin nfs-server avahi-autoipd bridge-utils ntp screen pigz iftop lsb-release build-essential",
        "wget http://archive.zfsonlinux.org/debian/pool/main/z/zfsonlinux/zfsonlinux_{{user `zol_version`}}_all.deb",
        "sudo dpkg -i zfsonlinux_{{user `zol_version`}}_all.deb || sudo apt-get install -fy",
        "sudo gpg --quiet --with-fingerprint /etc/apt/trusted.gpg.d/zfsonlinux.gpg",
        "sudo apt-get -y update",
        "sudo apt-get -y install debian-zfs",
        "sudo mv /tmp/*.network /etc/systemd/network/",
        "sudo mv /tmp/nfs-exports /etc/exports",

        "sudo systemctl enable systemd-resolved",
        "sudo systemctl enable systemd-networkd",
        "sudo ln -sf /run/systemd/resolve/resolv.conf /etc/resolv.conf",
        "sudo systemctl disable networking"
      ]
    }
  ]
}
