{
  "variables": {
    "instance": "1",
    "user": "randomcoww",
    "uid": "10000",
    "password": "password",
    "hostname": "zfs",
    "domain": "lan",
    "timezone": "Etc/UTC"
  },
  "builders": [
    {
      "type": "qemu",
      "iso_url": "http://cdimage.debian.org/cdimage/weekly-builds/amd64/iso-cd/debian-testing-amd64-netinst.iso",
      "iso_checksum_url": "http://cdimage.debian.org/cdimage/weekly-builds/amd64/iso-cd/SHA256SUMS",
      "iso_checksum_type": "sha256",
      "shutdown_command": "sudo bash -c 'rm /etc/sudoers.d/00_provisioning_temp && shutdown -P now'",

      "format": "raw",
      "accelerator": "kvm",
      "http_directory": "http",
      "disk_size": 20000,
      "disk_interface": "virtio",
      "net_device": "virtio-net",

      "headless": true,
      "vm_name": "{{user `hostname`}}-{{user `instance`}}",

      "ssh_username": "{{user `user`}}",
      "ssh_password": "{{user `password`}}",
      "ssh_wait_timeout": "3600s",
      "boot_command": [
        "<esc><wait><wait>",
        "install auto ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed-debian.cfg ",
        "debian-installer=en_US locale=en_US keymap=us ",

        "time/zone={{user `timezone`}} ",
        "netcfg/get_hostname={{user `hostname`}} ",
        "netcfg/get_domain={{user `domain`}} ",

        "fb=false debconf/frontend=noninteractive ",

        "passwd/username={{user `user`}} ",
        "passwd/user-fullname={{user `user`}} ",
        "passwd/user-uid={{user `uid`}} ",
        "passwd/user-password={{user `password`}} ",
        "passwd/user-password-again={{user `password`}} ",

        "initrd=/install/initrd.gz -- console=ttyS0,115200n8 elevator=noop <enter>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "files/config/zfs/{{user `instance`}}/10-ens2.network",
      "destination": "/tmp/10-ens2.network"
    },
    {
      "type": "file",
      "source": "files/config/zfs/{{user `instance`}}/10-ens3.network",
      "destination": "/tmp/10-ens3.network"
    },
    {
      "type": "file",
      "source": "files/config/zfs/50-hdparm.rules",
      "destination": "/tmp/50-hdparm.rules"
    },
    {
      "type": "file",
      "source": "files/config/zfs/nfs-exports",
      "destination": "/tmp/exports"
    },
    {
      "type": "shell",
      "inline": [
        "echo nameserver 8.8.8.8 | sudo tee -a /etc/resolv.conf",
        "echo 'vm.swappiness = 0' | sudo tee -a /etc/sysctl.conf",
        "sudo update-grub",
        "echo deb http://ftp.debian.org/debian stretch contrib | sudo tee -a /etc/apt/sources.list.d/contrib.list",
        "sudo apt-get -y update",
        "sudo apt-get -y install linux-headers-$(uname -r)",
        "sudo apt-get -y install zfs-dkms zfsutils-linux nfs-kernel-server ntp",
        "sudo mv /tmp/*.network /etc/systemd/network/",
        "sudo mv /tmp/*.rules /etc/udev/rules.d/",
        "sudo mv /tmp/exports /etc/",

        "sudo systemctl enable systemd-resolved",
        "sudo systemctl enable systemd-networkd",
        "sudo ln -sf /run/systemd/resolve/resolv.conf /etc/resolv.conf",
        "sudo systemctl disable networking"
      ]
    }
  ]
}
