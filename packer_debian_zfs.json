{
  "variables": {
    "user": "randomcoww",
    "uid": "10000",
    "password": "password",
    "hostname": "zfs-fs101",
    "domain": "dyn.local",
    "timezone": "Etc/UTC",
    "static_ip": "169.254.127.20"
  },
  "builders": [
    {
      "name": "{{user `hostname`}}",

      "type": "qemu",
      "format": "raw",
      "accelerator": "kvm",

      "iso_url": "http://cdimage.debian.org/debian-cd/8.2.0/amd64/iso-cd/debian-8.2.0-amd64-netinst.iso",
      "iso_checksum": "d393d17ac6b3113c81186e545c416a00f28ed6e05774284bb5e8f0df39fcbcb9",
      "iso_checksum_type": "sha256",

      "http_directory": "http",
      "disk_size": 20000,

      "ssh_username": "root",
      "ssh_key_path": "files/packer.key",
      "ssh_wait_timeout": "600s",
      "shutdown_command": "shutdown -P now",
      "output_directory": "/tmp/packer_build_qemu",

      "disk_interface": "scsi",
      "boot_wait": "2s",
      "qemuargs": [
        [ "-display", "none" ],
        [ "-m", "1024M" ]
      ],
      "boot_command": [
        "<esc><wait><wait>",
	"install auto ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed-debian_testing.cfg ",
        "debian-installer=en_US locale=en_US keymap=us ",
 
        "hostname={{user `hostname`}} ",
        "time/zone={{user `timezone`}} ",
        "netcfg/get_hostname={{user `hostname`}} ",
        "netcfg/get_domain={{user `domain`}} ",

        "fb=false debconf/frontend=noninteractive ",

        "passwd/username={{user `user`}} ",
        "passwd/user-fullname={{user `user`}} ",
        "passwd/user-uid={{user `uid`}} ",
        "passwd/user-password-again={{user `password`}} ",
        "passwd/user-password={{user `password`}} ",

        "initrd=/install/initrd.gz -- console=ttyS0,115200n8 <enter>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get -y install curl wget cgroup-bin nfs-server avahi-autoipd bridge-utils screen pigz iftop lsb-release",
	"wget http://archive.zfsonlinux.org/debian/pool/main/z/zfsonlinux/zfsonlinux_6_all.deb",
	"dpkg -i zfsonlinux_6_all.deb",
	"apt-get -y update",
	"apt-get -y install debian-zfs",
        "mkdir /etc/chef"
      ]
    },
    {
      "type": "chef-solo",
      "cookbook_paths": ["cookbooks"],
      "json": {
        "network_interfaces": {
          "ens2": {
            "bootproto": "dhcp",
            "reload": false
          },
          "ens3": {
            "bootproto": "static",
            "address": "{{user `static_ip`}}",
            "netmask": "255.255.0.0",
            "reload": false
          }
        },
        "nfs_exports": {
          "nfs4_root": {
            "directory": "/vol",
            "network": "169.254.0.0/16",
            "writeable": false,
            "sync": true,
            "options": [ "fsid=0", "no_subtree_check" ]
          },
          "music_b": {
            "directory": "/vol/music",
            "network": "169.254.0.0/16",
            "writeable": false,
            "sync": true,
            "options": [ "no_subtree_check" ]
          },
          "music_f": {
            "directory": "/vol/music",
            "network": "192.168.62.0/23",
            "writeable": false,
            "sync": true,
            "options": [ "no_subtree_check" ]
          },
          "video_b": {
            "directory": "/vol/video",
            "network": "169.254.0.0/16",
            "writeable": false,
            "sync": true,
            "options": [ "no_subtree_check" ]
          },
          "video_f": {
            "directory": "/vol/video",
            "network": "192.168.62.0/23",
            "writeable": false,
            "sync": true,
            "options": [ "no_subtree_check" ]
          },
          "torrent_b": {
            "directory": "/vol/torrent",
            "network": "169.254.0.0/16",
            "writeable": true,
            "sync": true,
            "options": [ "no_subtree_check" ]
          },
          "torrent_f": {
            "directory": "/vol/torrent",
            "network": "192.168.62.0/23",
            "writeable": false,
            "sync": true,
            "options": [ "no_subtree_check" ]
          },
          "img_b": {
            "directory": "/vol/img",
            "network": "169.254.0.0/16",
            "writeable": true,
            "sync": true,
            "options": [ "no_subtree_check" ]
          },
          "img_f": {
            "directory": "/vol/img",
            "network": "192.168.62.0/23",
            "writeable": false,
            "sync": true,
            "options": [ "no_subtree_check" ]
          },
          "pub_b": {
            "directory": "/vol/pub",
            "network": "169.254.0.0/16",
            "writeable": true,
            "sync": true,
            "options": [ "no_subtree_check", "no_root_squash" ]
          },
          "pub_f": {
            "directory": "/vol/pub",
            "network": "192.168.62.0/23",
            "writeable": true,
            "sync": true,
            "options": [ "no_subtree_check", "no_root_squash" ]
          }
        }
      },
      "run_list": [
        "recipe[ntp]",
        "recipe[nfs_export_wrapper]",
        "recipe[network_interfaces_wrapper::module_hack]",
        "recipe[network_interfaces_wrapper::debian]"
      ],
      "staging_directory": "/etc/chef"
    },
    {
      "type": "shell",
      "inline": ["rm /root/.ssh/authorized_keys"]
    }
  ]
}
